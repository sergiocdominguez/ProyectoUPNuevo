extends ../layout.jade
block contenido
    div(class="col-md-6 remove-float center-block big-top-space")
        h1 Editar linea
        form(action="/api/lineas/#{linea._id}", method="POST")
            <input type="hidden" name="_method" value="put"/>
            div(class="form-group")
            div
                label(for="jugador1") Jugador 1
                select(id="jugador1", name="jugador1", class="form-control")
                    for jugador in jugadores 
                        if (jugador._id+""==linea.id_jugador1+"")
                            option(selected value="#{jugador._id}") #{jugador.nombre} #{jugador.apellido} (#{jugador.handicap})
                        else
                            option(value="#{jugador._id}") #{jugador.nombre} #{jugador.apellido} (#{jugador.handicap})
                p
